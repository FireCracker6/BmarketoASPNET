@model GridCollectionItemViewModel

<a asp-controller="products" asp-action="details" asp-route-id="@Model.Id" class="gridcollection-item">
<div class="card">
    <div class="card-image">
        <img src="@Model.ImageUrl" alt="@Model.Title">
        <div class="shopping-cart-icon">
            <i class="fa-regular fa-cart-plus"></i>
        </div>

    </div>

    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p>
           @Model.Description
        </p>
        <div class="posts">
            <h4>@Model.AdminPosts</h4>
            <h4>@Model.Comments</h4>
        </div>

     
    </div>
</div>
</a>