@model RelatedProductsViewModel
<section class="_relatedProducts">
    <div class="container no-gutter">
        <div class="header ">
            <h5>@Model.Title</h5>
        </div>
        <div class="_cards">
            @if (Model.GridItems != null)
            {
               

                @foreach (var item in Model.GridItems)
                {
                    <partial name="/Views/Partials/_GridCollectionItem.cshtml" model="item" />
                }



            }
        </div>
    </div>


</section>