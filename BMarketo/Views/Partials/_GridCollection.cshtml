@model GridCollectionViewModel

@if (Model != null) {
    <section class="_collection">
        <div class="container">
            @if (!string.IsNullOrEmpty(Model.Title))
            {
                <div class="_header">@Model.Title</div>
            }
          
        </div>
        <div class="container">
            @if (Model.Categories != null)
            {
                <ul class="categories">
                    @foreach (var category in Model.Categories)
                    {
                        <li class="category-item">@category</li>
                    }
                </ul>
            }


        </div>
        <div class="container">
            @if (Model.GridItems != null)
            {
                <div class="_cards">
                   
                        @foreach (var item in Model.GridItems)
                        {
                         <partial name="/Views/Partials/_GridCollectionItem.cshtml" model="item"/>
                        }
               

                </div>
            }


        </div>
        @if (Model.LoadMore)
        {
            <div class="loadmore">
                <button class="btn-white">LOAD MORE <i class="fa-regular fa-arrow-rotate-right"></i></button>
            </div>
        }

    </section>
}