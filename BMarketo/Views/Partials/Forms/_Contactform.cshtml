@{
    var contactInfo = contactFormService.GetLatest();
}

<section class="contact-form">
    <div class="container">
        <div class="title">@contactInfo.Title</div>

        <form novalidate>
            <div class="name form-group">
                <label for="name">@contactInfo.NameLabel</label>
                <input id="name" type="text" class="invalid" required>
                <span class="error">@contactInfo.NameError</span>
            </div>
            <div class="email form-group">
                <label for="email">@contactInfo.EmailLabel</label>
                <input id="email" type="email" class="invalid" required>
                <span class="error">@contactInfo.EmailError</span>
            </div>
            <div class="phoneNumber form-group">
                <label for="phone">Phone Number (optional)</label>
                <input id="phone" type="text">
            </div>
            <div class="companyName form-group">
                <label for="company">@contactInfo.CompanyNameLabel</label>
                <input id="company" type="text">
            </div>
            <div class="message form-group">
                <label for="message">@contactInfo.MessageLabel</label>
                <textarea id="message" class="invalid" required></textarea>
                <span class="error">@contactInfo.MessageError</span>
            </div>
            <div class="terms form-checkbox-group">
                <label class="custom-checkbox">
                    @contactInfo.SaveUserInfoLabel
                    <input type="checkbox" checked="checked">
                    <span class="checkmark"></span>
                </label>
            </div>
            <button class="btn-theme" type="submit">@contactInfo.SubmitButton</button>
        </form>
    </div>
</section>

<script src="~/Scripts/contact-form.js"></script>
