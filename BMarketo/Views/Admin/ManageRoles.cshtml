@model ManageRolesViewModel
@{
    ViewBag.Title = "Manage Roles";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}
<section class="manage-roles">
    <div class="container my-5">
        <h1>Manage Roles</h1>
        <div class="info-container">

            <a class="button" href="@Url.Action("UserList", "Admin")">Back to User List</a>

        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Current Roles</th>
                    <th>Change Role To</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <form method="post" asp-action="UpdateUserRole">
                    <tr>
                        <td>@user.Email</td>
                        <td>@string.Join(", ", user.Roles)</td>
                        <td>
                            <select id="SelectedRole" name="SelectedRole" asp-items="user.AvailableRoles"></select>
                            <input type="hidden" asp-for="@user.UserId" name="UserId" />
                        </td>
                        <td>
                            <button type="submit">Update Role</button>
                        </td>
                    </tr>
                    </form>
                }
            </tbody>
        </table>
    </div>
</section>
