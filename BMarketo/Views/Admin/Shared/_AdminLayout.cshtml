@using System.Security.Claims
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/41c8b474e2.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <title>@ViewData["Title"] - BMarketo </title>
    <link rel="stylesheet" href="~/scss/style.css" asp-append-version="true" />

    <!-- Add the DataTables CSS here -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />

    <!-- Add the DataTables and jQuery JavaScript files here -->
    <script type="text/javascript" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>

</head>
<body>
    <partial name="/Views/Partials/_Header.cshtml" />
    <nav class="navbar navbar-expand-md navbar-dark bg-dark d-flex justify-space-between">
        <div class="container">
            <a class="navbar-brand" href="#">Admin Area - @User.FindFirst("DisplayName")?.Value</a>

            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Admin")">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ProductList", "Products")">Products</a>

                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="ManageRoles">Users</a>

                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Subscribers", "Admin")">Subscribers</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Admin", "Profile")">Profile</a>

                </li>
            </ul>
        </div>
    </nav>
   
    <div class="container">
     
        @RenderSection("Styles", required: false)
        @RenderSection("MainContent", required: false)
        @RenderBody()
        <partial name="/Views/Partials/_Footer.cshtml" />


    </div>
  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
