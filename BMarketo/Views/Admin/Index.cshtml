@using BMarketo.ViewModels
@model AdminIndexViewModel

@{
    ViewData["Title"] = "Backoffice";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}

<style>
  
    .info-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
     
    }

    .info {
        margin-bottom: 1rem;
    }
</style>

<div class="container d-flex justify-content-center my-5">
    <div class="mb-5">
        <h5> Welcome, @Model.DisplayName! What do you want to do today?</h5>
    </div>
</div>

<div class="container info-container">
    <div class="info">
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Phone number:</strong> @Model.PhoneNumber</p>
    </div>

    <div class="info">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Admin")">Dashboard</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("ProductList", "Products")">Products</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="UserList">Users</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Subscribers", "Admin")">Subscribers</a>
            </li>
        </ul>
    </div>
</div>
