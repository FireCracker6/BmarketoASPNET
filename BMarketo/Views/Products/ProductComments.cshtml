@using BMarketo.Models.Entities.Products;
@model List<CommentsEntity>

<div class="container">
<h2>Comments</h2>


@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Comment</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var comment in Model)
            {
                <tr>
                    <td>@comment.Username</td>
                    <td>@comment.CommentText</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No comments available.</p>
}
</div>